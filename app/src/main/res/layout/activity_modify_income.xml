<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick = "linearOnClick"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id = "@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onBackButtonClicked"
                    android:padding = "0dp"
                    android:layout_margin="50dp"
                    android:src = "@drawable/re_btn"
                    android:background="#00ff0000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:text="수입 내역 수정하기"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--날짜와 시간을 수평으로 입력받으려고-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity = "center">

                    <!--날짜 입력받는 RelativeLayout-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="50dp">
                        <TextView
                            android:id="@+id/incomeDayTv"
                            android:text="날짜"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="18dp"/>
                        <!--spinner로 날짜 입력받기-->
                        <DatePicker
                            android:id="@+id/incomeDatePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:datePickerMode="spinner"
                            android:layout_gravity="center_horizontal"
                            android:calendarViewShown="false"
                            android:layout_below="@id/incomeDayTv"
                            />
                        <EditText
                            android:id="@+id/incomeDayEt"
                            android:hint="2017-01-01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_below="@id/incomeDatePicker"
                            android:paddingLeft = "12dp"
                            android:focusableInTouchMode="false"
                            android:layout_marginBottom="25dp"/>
                    </RelativeLayout>

                    <!--시간 입력받는 RelatvieLayout-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="50dp">
                        <TextView
                            android:id="@+id/incomeTimeTv"
                            android:text="시간"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="18dp"/>
                        <!--spinner로 날짜 입력받기-->
                        <TimePicker
                            android:id="@+id/incomeTimePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:timePickerMode="spinner"
                            android:layout_gravity="center_horizontal"
                            android:calendarViewShown="false"
                            android:layout_below="@id/incomeTimeTv"
                            />
                        <EditText
                            android:id="@+id/incomeTimeEt"
                            android:hint="00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_below="@id/incomeTimePicker"
                            android:paddingLeft = "12dp"
                            android:focusableInTouchMode="false"
                            android:layout_marginBottom="25dp"/>
                    </RelativeLayout>

                </LinearLayout>

                <!--분야 입력받는 RelativeLayout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp">
                    <TextView
                        android:id="@+id/incomeCategoryTv"
                        android:text="분야"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"/>
                    <Spinner
                        android:id="@+id/incomeCategorySp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/incomeCategoryTv"
                        android:entries="@array/incomeCategory"
                        android:paddingLeft="18dp"
                        android:paddingTop="18dp"/>
                </RelativeLayout>

                <!--금액 입력받는 RelativeLayout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    >
                    <TextView
                        android:id="@+id/incomeMoneyTv"
                        android:text="금액"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft= "18dp"/>
                    <EditText
                        android:id = "@+id/incomeMoneyEt"
                        android:hint="10,000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft = "16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@id/incomeMoneyTv"
                        android:paddingLeft="12dp"
                        android:inputType="number"/>
                </RelativeLayout>

                <!--메모 입력받는 RelativeLayout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp">
                    <TextView
                        android:id="@+id/incomeMemoTv"
                        android:text="메모"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"/>
                    <EditText
                        android:id="@+id/incomeMemoEt"
                        android:hint="메모"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@id/incomeMemoTv"
                        android:paddingLeft = "12dp"/>
                </RelativeLayout>

                <!--Button출력하는 LinearLayout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp">
                    <Button
                        android:id="@+id/objectBtn"
                        android:text="확인"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:theme = "@style/MyButton"
                        android:onClick="onObjectButtonClicked"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>