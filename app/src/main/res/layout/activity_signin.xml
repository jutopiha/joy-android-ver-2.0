<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joy.tiggle.joy.Activity.SigninActivity"
    android:theme="@style/AppTheme"
    android:background="@drawable/login_bg">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:srcCompat="@drawable/login_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView3"
        android:layout_marginTop="122dp" />

    <TextView
        android:text="당신을 위한 맞춤형 가계부"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:alpha="0.8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#3b5999"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/sign_in_facebook_button"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="19dp"
            app:srcCompat="@drawable/login_facebook"
            android:id="@+id/login_facebook_logo"
            android:layout_centerVertical="true" />

        <TextView
            android:text="페이스북으로 로그인하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLogin"
            android:layout_marginLeft="17dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>
