<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--상단 바-->
        <RelativeLayout
            android:id="@+id/relativeTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="퀘스트"
                android:textSize="17sp"
                android:textColor="@color/light_gray"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <!--퀘스트 목록 타이틀-->
        <RelativeLayout
            android:id="@+id/relativeQuestInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:padding="7dp"
            android:layout_below="@id/relativeTitle">

            <ImageView
                android:id="@+id/imageQuestTitle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_down_arrow"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvItemBuyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진행중인 퀘스트"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/imageQuestTitle"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btnItemBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="퀘스트 추가"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <!--퀘스트 목록-->
        <RelativeLayout
            android:id="@+id/relativeQuestsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:padding="7dp"
            android:layout_below="@id/relativeQuestInfo">

            <!--주간 퀘스트-->
            <RelativeLayout
                android:id="@+id/relativeWeeklyQuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="5dp"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tvWeeklyQuest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주간 지출 목표 달성"
                   android:textSize="15sp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp" />
            </RelativeLayout>

            <!--월간 퀘스트-->
            <RelativeLayout
                android:id="@+id/relativeMonthlyQuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="5dp"
                android:onClick="onClick"
                android:layout_below="@id/relativeWeeklyQuest"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tvMonthlyQuest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월간 지출 목표 달성"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp" />

        </RelativeLayout>
    </RelativeLayout>

    </RelativeLayout>

</ScrollView>